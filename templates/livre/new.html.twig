{% extends 'base.html.twig' %}

{% block title %}Ajouter un nouveau livre{% endblock %}

{% block body %}
<style>
    body {
        background: url('https://www.en-vols.com/wp-content/uploads/afmm/2022/02/livres-ouverts_shutterstock_1840804387.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    .overlay-form {
        background: rgba(255, 255, 255, 0.97);
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .card-header.bg-primary {
        background: linear-gradient(45deg, #2196f3, #1976d2);
    }

    .btn-success {
        background-color: #4caf50;
        border-color: #4caf50;
    }

    .btn-success:hover {
        background-color: #388e3c;
        border-color: #388e3c;
    }
</style>

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="overlay-form">
                    <div class="text-center mb-4">
                        <h2 class="text-primary fw-bold">ðŸ“˜ Ajouter un nouveau livre</h2>
                        <p class="text-muted fst-italic">Merci dâ€™enrichir notre collection !</p>
                    </div>

                    {{ form_start(form) }}

                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.titre) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.slug) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.image) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.resume) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.editeur) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.dateEdition) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                {{ form_row(form.qte) }}
                            </div>
                            <div class="col-md-4">
                                {{ form_row(form.isbn) }}
                            </div>
                            <div class="col-md-4">
                                {{ form_row(form.date_dispo) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.cat_id) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.subCategory) }}
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('app_livre_index') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Retour Ã  la liste
                            </a>
                            <button class="btn btn-success">
                                <i class="fas fa-save me-1"></i> Enregistrer
                            </button>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
