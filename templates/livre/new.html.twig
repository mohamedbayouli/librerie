{% extends 'base.html.twig' %}

{% block title %}Ajouter un nouveau livre{% endblock %}

{% block body %}
<section class="py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-primary text-white text-center">
                        <h2 class="mb-0">Ajouter un nouveau livre</h2>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}

                            {{ form_row(form.titre) }}
                            {{ form_row(form.slug) }}
                            {{ form_row(form.image) }}
                            {{ form_row(form.resume) }}
                            {{ form_row(form.editeur) }}
                            {{ form_row(form.dateEdition) }}
                            {{ form_row(form.qte) }}
                            {{ form_row(form.isbn) }}
                            {{ form_row(form.date_dispo) }}

                            <div class="d-flex justify-content-between mt-4">
                                <a href="{{ path('app_livre_index') }}" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-1"></i> Retour Ã  la liste
                                </a>
                                <button class="btn btn-success">
                                    <i class="fas fa-save me-1"></i> Enregistrer
                                </button>
                            </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
