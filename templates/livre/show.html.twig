{% extends 'base.html.twig' %}

{% block title %}Détail du livre{% endblock %}

{% block body %}
<section class="py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-info text-white text-center">
                        <h2 class="mb-0">Détail du livre</h2>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <th scope="row">ID</th>
                                    <td>{{ livre.id }}</td>
                                </tr>
                                <tr>
                                    <th>Titre</th>
                                    <td>{{ livre.titre }}</td>
                                </tr>
                                <tr>
                                    <th>Slug</th>
                                    <td>{{ livre.slug }}</td>
                                </tr>
                                <tr>
                                    <th>Image</th>
                                    <td>
                                        {% if livre.image %}
                                            <img src="{{ livre.image }}" alt="Couverture" class="img-fluid" style="max-height: 200px;">
                                        {% else %}
                                            <em>Aucune image</em>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>Résumé</th>
                                    <td>{{ livre.resume }}</td>
                                </tr>
                                <tr>
                                    <th>Éditeur</th>
                                    <td>{{ livre.editeur }}</td>
                                </tr>
                                <tr>
                                    <th>Date d'édition</th>
                                    <td>{{ livre.dateEdition ? livre.dateEdition|date('Y-m-d') : 'Non renseignée' }}</td>
                                </tr>
                                <tr>
                                    <th>Quantite</th>
                                    <td>{{ livre.qte }} </td>
                                </tr>
                                <tr>
                                    <th>ISBN</th>
                                    <td>{{ livre.isbn }}</td>
                                </tr>
                                <tr>
                                    <th>Date d’indisponibilité</th>
                                    <td>{{ livre.dateDispo ? livre.dateDispo|date('Y-m-d') : 'Toujours disponible' }}</td>
                                </tr>
                            </tbody>
                        </table>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('app_livre_index') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Retour à la liste
                            </a>
                            <div>
                                <a href="{{ path('app_livre_edit', {'id': livre.id}) }}" class="btn btn-primary me-2">
                                    <i class="fas fa-edit me-1"></i> Modifier
                                </a>
                                {{ include('livre/_delete_form.html.twig') }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
